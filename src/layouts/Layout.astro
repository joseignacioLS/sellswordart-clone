---
import "../global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "@fontsource/montserrat";
import "@fontsource/metamorphous";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Sellsword Arts</title>
  </head>
  <body class="grid grid-rows-[auto_1fr_auto] bg-gray-900 text-white">
    <Header />
    <main class="w-full max-w-full flex flex-col gap-4">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  html {
    overflow-x: hidden;
  }
  html,
  body {
    margin: 0;
    max-width: 100vw;
    width: 100vw;
    min-height: 100dvh;
  }
</style>
