---

<Layout>
  <div
    class="p-4 grid grid-cols-1 sm:grid-cols-[repeat(auto-fill,minmax(500px,1fr))] gap-4"
  >
    {
      sections.map(({ title, links, icon, color }) => {
        return (
          <section
            class={`p-4 h-fit w-full flex flex-col items-center rounded-lg ${color}`}
          >
            <h2 class="pb-1 w-full flex justify-center items-center gap-4 text-3xl text-center font-bold border-b-4 border-white">
              {title} <img src={icon} class="h-10" />
            </h2>
            <div class=" mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
              {links.map(({ image, href }) => {
                return (
                  <a
                    class="hover:scale-102 border-b-5 border-r-5 border-gray-900 transition:transform duration-200 rounded-xl overflow-hidden"
                    href={href}
                    target="_blank"
                  >
                    <img class="" src={image} />
                  </a>
                );
              })}
            </div>
          </section>
        );
      })
    }
  </div>
</Layout>
