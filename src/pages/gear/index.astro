      sections.map(({ title, links }) => {
        return (
          <section class="w-full flex flex-col items-center bg-red-700 rounded-lg p-4 h-fit">
            <h2 class="text-3xl text-center font-bold">{title}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
              {links.map(({ image, href }) => {
                return (
                  <a class="" href={href} target="_blank">
                    <img class="" src={image} />
                  </a>
                );
              })}
            </div>
          </section>
        );
      })
    }
