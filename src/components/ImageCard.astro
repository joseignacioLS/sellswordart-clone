---
const { link, title, image } = Astro.props;
---

<a
  href={title}
  target="_blank"
  class="group w-full max-w-150 h-fit bg-gray-700 hover:bg-gray-600 flex flex-col gap-8 items-center rounded-2xl overflow-hidden pb-8"
>
  <div class="w-full overflow-hidden">
    <img class="w-full group-hover:scale-110 transition-transform duration-200" src={image} />
  </div>
  <div class="px-8 text-center flex flex-col gap-4">
    <h3 class="text-3xl font-bold text-balance">{title}</h3>
    <slot />
  </div>
</a>
