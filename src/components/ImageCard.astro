---
const { link, title, image } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="group pb-8 w-full max-w-150 h-fit flex flex-col items-center gap-8 bg-gray-700 hover:bg-gray-600 rounded-2xl overflow-hidden"
>
  <div class="w-full overflow-hidden">
    <img
      class="w-full group-hover:scale-110 transition-transform duration-200"
      src={image}
    />
  </div>
  <div class="px-8 flex flex-col gap-4 text-center">
    <h3 class="text-3xl font-bold text-balance">{title}</h3>
    <slot />
  </div>
</a>
